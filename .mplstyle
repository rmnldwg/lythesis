#### COLORS
# usz_blue = '005ea8'
# usz_green = '00afa5'
# usz_red = 'ae0060'
# usz_orange = 'f17900'
# usz_gray = 'c5d5db'

#### FONT
font.size       : 9.0

#### LATEX
mathtext.fontset : cm
mathtext.rm      : serif
mathtext.tt      : monospace
mathtext.it      : serif:italic
mathtext.bf      : serif:bold
mathtext.sf      : serif

#### LINES
lines.linewidth  : 1
lines.markersize : 3

#### AXES
axes.grid             : True
axes.titlesize        : 9.0
axes.titleweight      : normal
axes.titlepad         : 8.0
axes.labelsize        : 9.0
axes.labelweight      : regular
axes.labelpad         : 2.0
axes.linewidth        : 0.5
axes.formatter.limits : -3, 4
axes.prop_cycle       : cycler(linestyle=['-', '--', '-.']) * cycler(color=['005ea8', 'f17900', 'ae0060', '00afa5'])

#### GRIDS
grid.color       :   k       # grid color
grid.linestyle   :   -       # dotted
grid.linewidth   :   0.5     # in points
grid.alpha       :   0.1     # transparency, between 0.0 and 1.0

#### HIST
hist.bins       :   20       # number of bins

#### TICKS
xtick.direction     : in
xtick.major.width   : 0.5
xtick.major.size    : 3.0
xtick.minor.visible : False
xtick.color         : black
xtick.labelsize     : 7.0
xtick.major.pad     : 1.5     ## distance to major tick label in points
xtick.minor.pad     : 1.4     ## distance to the minor tick label in points

ytick.direction     : in
ytick.major.width   : 0.5
ytick.major.size    : 3.0
ytick.minor.visible : False
ytick.color         : black
ytick.labelsize     : 7.0
ytick.major.pad     : 1.5     ## distance to major tick label in points
ytick.minor.pad     : 1.4     ## distance to the minor tick label in points

#### FIGURE
figure.dpi         : 300
figure.titlesize   : large
figure.titleweight : bold
figure.subplot.wspace : 0.2
figure.subplot.hspace : 0.2
figure.autolayout : False
figure.constrained_layout.use : True

#### SAVE
savefig.format : svg

#### LEGEND
legend.markerscale       : 0.75
legend.title_fontsize    : small
legend.fontsize          : 7.0
legend.borderpad         : 0.2
legend.labelspacing      : 0.1
